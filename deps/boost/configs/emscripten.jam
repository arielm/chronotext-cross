using clang	: emscripten
:
emcc -v -s WASM=0 -s USE_ZLIB=1
:
<archiver>emar
<ranlib>emranlib
<linker>emlink
<cxxflags>-std=gnu11
;

import type : change-generated-target-suffix ;
type.change-generated-target-suffix EXE : <toolset-clang:version>emscripten : js ;
